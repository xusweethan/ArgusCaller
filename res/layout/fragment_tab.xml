<com.argus.caller.view.MyInnerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_inner_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/id_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ff0fffff"
            android:gravity="center" >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:background="#fff0ffff"
            android:gravity="center"
            android:text="Hello World 1" >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:background="#ffff0fff"
            android:gravity="center"
            android:text="Hello World 2" >
        </TextView>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:background="#fffff0ff"
            android:gravity="center"
            android:text="Hello World 3" >
        </TextView>

    </LinearLayout>

</com.argus.caller.view.MyInnerScrollView>