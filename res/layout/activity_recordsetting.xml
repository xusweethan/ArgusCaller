<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/u14" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/jiantou" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="12dp"
        android:text="Record Settings"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/RecordingPath"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_alignBottom="@+id/catalog"
        android:layout_below="@+id/head"
        android:background="#323232" />

    <TextView
        android:id="@+id/RecordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Recording Path"
        android:textColor="#eaeaea"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/filepath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RecordText"
        android:layout_marginLeft="20dp"
        android:textColor="#a1a1a1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/catalog"
        android:layout_width="300dp"
        android:layout_height="0.1sp"
        android:layout_below="@+id/filepath"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#a1a1a1"
        android:gravity="center"
        android:paddingLeft="8dip" />

    <TextView
        android:id="@+id/format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catalog"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Audio Format"
        android:textColor="#eaeaea"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner1"
        style="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/catalog"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:popupBackground="@android:color/black"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/spinnerbottom"
        android:layout_width="80dp"
        android:layout_height="0.1sp"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="#a1a1a1" />

    <TextView
        android:id="@+id/Quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/format"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Audio Quality"
        android:textColor="#eaeaea"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Quality"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Quality"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/radio"
            android:text="Low,8KHz"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/radio"
            android:text="Modertate,22KHz"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/radio"
            android:text="High,44KHz"
            android:textColor="#eaeaea"
            android:textSize="18sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/tpfs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginLeft="20dp"
        android:text="Large file size,crystal clear sound quality"
        android:textColor="#a1a1a1"
        android:textSize="15sp" />

</RelativeLayout>